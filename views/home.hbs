{{#if removed}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
   "User has been removed"
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}


<div class="row">
    <div class="col-6"><h1>Users</h1></div>
    <div class="col-6 d-flex justify-content-end">
    <a href="/adduser" type="button" class="btn btn-primary align-self-center">+ add user</a>
   </div>
</div>



<table class="table table-bordered">
  <thead class="thread-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Mobile</th>
      <th scope="col">Status</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}  
    <tr>
      <th scope="row">{{ this.regid}}</th>
      <td>{{ this.firstname}}</td>
      <td>{{ this.lastname}}</td>
      <td>{{ this.email}}</td>
      <td>{{ this.mobile}}</td>
      <td>{{ this.status}}</td>
      <td class="text-end">
          <a href="/viewall/{{this.regid}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>View</a>
          <a href="/edituser/{{this.regid}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
          <a href="/{{this.regid}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>